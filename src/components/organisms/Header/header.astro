---
import { Image } from 'astro:assets';
import { HeaderMobile } from './HeaderMobile';
import ThemeToggle from '../../atoms/ThemeToggle/themeToggle.astro';
---

<header class="mx-auto mt-[50px] flex max-w-[1220px] items-center justify-between px-[20px]">
	<a href="/" data-aos="fade">
		<Image
			src="/assets/icons/logo.svg"
			alt="Logo"
			width="40"
			height="30"
			loading="eager"
			class="mr-[15px]"
		/>
	</a>

	<nav class="hidden md:block" data-aos="fade">
		<ul class="flex gap-[67px] text-[18px] text-[--secondary]">
			<li class="transition-all hover:text-[--primary]"><a href="/">Home</a></li>
			<li class="transition-all hover:text-[--primary]"><a href="/about">About</a></li>
			<li class="transition-all hover:text-[--primary]">
				<a href="/tech-stack">Tech Stack</a>
			</li>
			<li class="transition-all hover:text-[--primary]"><a href="/projects">Projects</a></li>
		</ul>
	</nav>

	<div class="hidden gap-[20px] md:flex" data-aos="fade">
		<a
			href="https://github.com/Wesley-wsl"
			target="_blank"
			class="transition-all hover:-translate-y-1"
		>
			<Image src="/assets/icons/github-icon.svg" alt="Github icon" width="30" height="30" />
		</a>
		<a
			href="https://www.linkedin.com/in/wesley-westellley"
			target="_blank"
			class="transition-all hover:-translate-y-1"
		>
			<Image src="/assets/icons/linkedin-icon.svg" alt="Github icon" width="30" height="30" />
		</a>
		<ThemeToggle />
	</div>

	<HeaderMobile client:only="react" />
</header>
