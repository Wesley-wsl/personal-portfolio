---
import { Image } from 'astro:assets';
import Label from '../../atoms/Label/label.astro';

interface Props {
	title: string;
	company: string;
	location: string;
	date: string;
}

const { title, company, date, location } = Astro.props;
---

<div class="border-b-2 pb-[24px]">
	<div class="flex flex-wrap-reverse items-center justify-between">
		<h3 class="text-[20px] text-[--secondary]">
			{title}
		</h3>

		<span class="mb-[10px] sm:mb-[0]">
			<Label title="Full Time" />
		</span>
	</div>
	<div
		class="mt-[10px] flex flex-col items-start justify-between gap-[5px] sm:flex-row sm:items-center sm:gap-[30px]"
	>
		<div class="flex flex-col items-center gap-[5px] sm:flex-row sm:gap-[0px]">
			<div class="flex items-center gap-[10px] sm:gap-[4px]">
				<Image
					src="/assets/icons/company-icon.svg"
					width="16"
					height="12"
					alt="Company"
					loading="lazy"
				/>
				<p class="w-[170px] text-[12px] font-medium text-[#A7A7A7]">
					{company}
				</p>
			</div>
			<div class="flex items-center gap-[10px] sm:gap-[4px]">
				<Image
					src="/assets/icons/location-icon.svg"
					width="16"
					height="12"
					alt="Company"
					loading="lazy"
				/>
				<p class="w-[170px] text-[12px] font-medium text-[#A7A7A7]">
					{location}
				</p>
			</div>
		</div>
		<div class="flex items-center gap-[10px] sm:gap-[4px]">
			<Image
				src="/assets/icons/location-icon.svg"
				width="16"
				height="12"
				alt="Company"
				loading="lazy"
			/>
			<p class="w-[170px] text-[12px] font-medium text-[#A7A7A7] sm:w-[120px]">
				{date}
			</p>
		</div>
	</div>
</div>
